#multiplication function
def multiplication_func():
    count = 0
    x3 = random.randint(1, 40)
    y3 = random.randint(1, 40)
    while 1:
        print(x3, "x", y3, "=?")
        z3 = int(input("answer? "))

        if z3 == x3*y3:
            print("correct")
            count = count + 1
            break
        else:
            print("incorrect, please try again")
            count = count + 1
    
    print("you took ", count, "trials to solve this question")


#division function
def division_func():
    count = 0
    x4 = random.randint(60, 100)
    y4 = random.randint(1, 40)
    x4%y4 == 0
    while 1:
        print(x4, "รท", y4, "= ?")
        z4 = int(input("answer? "))

        if z4 == x4/y4:
            print("correct")
            count = count + 1
            break
        else:
            print("incorrect, please try again")
            count = count + 1
        
    print("you took ", count, "trials to solve this question")




#subtract function
def subtraction_func1():
    count = 0
    x2 = random.randint(11, 20)
    y2 = random.randint(1, 10)
    while 1:
        print(x2, "-", y2, "=?")
        z2 = int(input("answer? "))

        if z2 == x2-y2:
            print("correct")
            count = count + 1
            break
        else:
            print("incorrect, please try again")
            count = count + 1
        
    print("you took ", count, "trials to solve this question")


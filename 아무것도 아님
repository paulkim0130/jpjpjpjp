import random


#addition function
def addition_func1():
    count = 0
    x1 = random.randint(1, 10)
    y1 = random.randint(1, 10)
    while 1:
        print(x1, "+", y1, "=?")
        z1 = int(input("answer? "))

        if z1 == x1+y1:
            print("correct")
            count = count + 1
            break
        else:
            print("incorrect, please try again")
            count = count + 1
    
    print("you took ", count, "trials to solve this question")

